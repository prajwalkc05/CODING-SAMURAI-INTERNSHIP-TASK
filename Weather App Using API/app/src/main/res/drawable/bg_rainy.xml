<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark Blue Rain Gradient -->
    <item>
        <shape>
            <gradient
                android:startColor="#455A64"
                android:centerColor="#37474F"
                android:endColor="#263238"
                android:angle="270" />
        </shape>
    </item>
    <!-- Rain Streaks Overlay -->
    <item>
        <shape>
            <gradient
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="45" />
        </shape>
    </item>
</layer-list>