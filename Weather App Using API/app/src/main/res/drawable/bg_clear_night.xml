<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep Blue/Black for Clear Night -->
    <item>
        <shape>
            <gradient
                android:startColor="#1A237E"
                android:centerColor="#0D47A1"
                android:endColor="#000000"
                android:angle="270" />
        </shape>
    </item>
    <!-- Starlight overlay -->
    <item>
         <shape>
            <gradient
                android:startColor="#10FFFFFF"
                android:endColor="#00000000"
                android:angle="45"/>
        </shape>
    </item>
</layer-list>