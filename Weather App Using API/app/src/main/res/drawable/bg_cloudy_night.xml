<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark Grey-Blue for Cloudy Night -->
    <item>
        <shape>
            <gradient
                android:startColor="#37474F"
                android:centerColor="#263238"
                android:endColor="#102027"
                android:angle="270" />
        </shape>
    </item>
    <!-- Soft Mist Overlay -->
    <item>
        <shape>
            <solid android:color="#20FFFFFF"/>
        </shape>
    </item>
</layer-list>