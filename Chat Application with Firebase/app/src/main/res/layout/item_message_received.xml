<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMessageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp">

    <!-- Sender Name (Outside Bubble) -->
    <TextView
        android:id="@+id/tvSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        android:text="user@email.com"
        android:textColor="#757575"
        android:textSize="12sp"
        android:visibility="visible" />

    <!-- Message Bubble + Time Container -->
    <LinearLayout
        android:id="@+id/llBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_received_message"
        android:orientation="vertical"
        android:maxWidth="280dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp">

        <!-- Image Message -->
        <ImageView
            android:id="@+id/ivMessage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginBottom="4dp"/>

        <!-- Message Text -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am good, thanks!"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Timestamp (Right Aligned inside bubble for neatness) -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:text="10:31 AM"
            android:textColor="#757575"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>